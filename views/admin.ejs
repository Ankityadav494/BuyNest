<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Create New Product</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body class="min-h-screen bg-gray-50 flex">

  <!-- Sidebar -->
  <aside class="w-1/5 bg-white shadow-sm p-6 border-r">
    <h1 class="text-2xl font-semibold mb-6">BuyNest</h1>
    <nav class="flex flex-col space-y-3">
      <a href="#" class="text-gray-700 hover:text-blue-600">All Products</a>
      <a href="#" class="text-gray-700 hover:text-blue-600 font-medium">Create new product</a>
    </nav>
  </aside>

  <!-- Main Content -->
  <main class="flex-1 p-10">
    <h2 class="text-2xl font-semibold mb-6">Create New Product</h2>

    <!-- Product Form -->
    <form class="max-w-2xl bg-white p-6 rounded-lg shadow-sm border">

      <!-- Product Details -->
      <h3 class="text-lg font-semibold mb-3">Product Details</h3>
      <div class="mb-4">
        <label class="block text-gray-700 mb-1">Product Image</label>
        <input type="file" class="block w-full border rounded p-2" />
      </div>

      <div class="grid grid-cols-2 gap-4 mb-4">
        <input type="text" placeholder="Product Name" class="border rounded p-2 w-full" />
        <input type="text" placeholder="Product Price" class="border rounded p-2 w-full" />
      </div>

      <div class="mb-6">
        <input type="text" placeholder="Discount Price" class="border rounded p-2 w-full" />
      </div>

      <!-- Panel Details -->
      <h3 class="text-lg font-semibold mb-3">Panel Details</h3>
      <div class="grid grid-cols-2 gap-4 mb-4">
        <input type="text" placeholder="Background Color" class="border rounded p-2 w-full" />
        <input type="text" placeholder="Panel Color" class="border rounded p-2 w-full" />
      </div>

      <div class="mb-6">
        <input type="text" placeholder="Text Color" class="border rounded p-2 w-full" />
      </div>

      <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
        Create New Product
      </button>
    </form>
  </main>

</body>
</html>
