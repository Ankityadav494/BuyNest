                <li>All Products</li>
                <li>Discounted Products</li>
            </ul>
        </div>

        <!-- Filter -->
        <div class="space-y-1">
            <p class="font-semibold">Filter by :</p>
            <ul class="space-y-1 text-sm">
                <li>Availability</li>
                <li>Discount</li>
            </ul>
        </div>
    </aside>

    <!-- Product Grid -->
    <main class="flex-1 p-6 grid grid-cols-4 gap-6">
